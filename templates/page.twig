{% extends "base.twig" %}

{% block content %}
	<div class="content-wrapper">
		<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
			<section class="article-content">
				<h1 class="article-h1">{{post.title}}</h1>
				<div class="article-body">
					{{post.content}}
				</div>
			</section>
		</article>
		<aside class="post-side-images">
			<img src="{{post.get_field('image_1')}}" class="image" />
			<img src="{{post.get_field('image_2')}}" class="image" />
		</aside>
	</div><!-- /content-wrapper -->
{% endblock %}
